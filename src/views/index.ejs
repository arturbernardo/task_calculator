<html>
  <link rel="stylesheet" type="text/css" href="/styles.css">
  <body>
    <h1>Mathematical Tasks</h1>
    <div class="tbl-header">
      <table cellpadding="0" cellspacing="0">
        <thead>
          <tr>
            <th>id</th>
            <th>Left</th>
            <th>Right</th>
            <th>Operation</th>
            <th>Result</th>
            <th>Validation Status</th>
            <th>Reason</th>
          </tr>
        </thead>
      </table>
    </div>
    <div class="tbl-content">
      <table cellpadding="0" cellspacing="0">
        <tbody>
          <% data.forEach(task => { %>
            <tr>
              <td> <%= task.id %></td>
              <td> <%= task.left %></td>
              <td> <%= task.right %></td>
              <td> <%= task.operation.toUpperCase() %></td>
              <td> <%= task.result %></td>
              <td>
                <% if (task.validationStatus) { %>
                  <span class="circle green-circle"></span>
                <% } else { %>
                  <span class="circle red-circle"></span>
                <% } %>
              </td>
              <td> <%= task.reason %></td>
            </tr>
          <% }) %>
        </tbody>
      </table>
    </div>
  </body>
</html>